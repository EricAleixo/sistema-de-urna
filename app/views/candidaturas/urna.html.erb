<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Urna Eletr√¥nica</title>
  <%= stylesheet_link_tag "urna", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "sweetalert2.min", "data-turbo-track": "reload" %>
  <%= javascript_include_tag "sweetalert2.all.min", "data-turbo-track": "reload", defer: true %>
  <% if @session.nil? %>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap');
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    html, body {
      width: 100%;
      height: 100%;
      overflow: hidden;
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    html, body {
      width: 100%;
      height: 100%;
      overflow: hidden;
    }
    
    .waiting-page {
      background: linear-gradient(135deg, #0a1e4a 0%, #1a3a6e 100%);
      font-family: 'Roboto', sans-serif;
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      overflow: hidden;
    }
    
    .particles {
      position: absolute;
      width: 100%;
      height: 100%;
      overflow: hidden;
      z-index: 0;
    }
    
    .particle {
      position: absolute;
      width: 4px;
      height: 4px;
      background: rgba(255, 255, 255, 0.3);
      border-radius: 50%;
      animation: float 20s infinite;
    }
    
    @keyframes float {
      0%, 100% {
        transform: translateY(0) translateX(0);
        opacity: 0;
      }
      10% { opacity: 1; }
      90% { opacity: 1; }
      100% {
        transform: translateY(-100vh) translateX(50px);
        opacity: 0;
      }
    }
    
    .waiting-container {
      position: relative;
      z-index: 1;
      text-align: center;
      width: 100%;
      max-width: 900px;
      padding: 2rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
    
    .logo-container {
      margin-bottom: 2rem;
      animation: breathe 3s ease-in-out infinite;
    }
    
    @keyframes breathe {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.05); }
    }
    
    .logo-circle {
      width: 140px;
      height: 140px;
      margin: 0 auto;
      background: linear-gradient(135deg, #2e7d32 0%, #4caf50 100%);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 20px 60px rgba(46, 125, 50, 0.4);
      position: relative;
    }
    
    .logo-circle::before {
      content: '';
      position: absolute;
      inset: -10px;
      border-radius: 50%;
      background: linear-gradient(135deg, #2e7d32, #4caf50);
      opacity: 0.3;
      filter: blur(20px);
      animation: pulse-glow 2s ease-in-out infinite;
    }
    
    @keyframes pulse-glow {
      0%, 100% {
        opacity: 0.3;
        transform: scale(1);
      }
      50% {
        opacity: 0.6;
        transform: scale(1.1);
      }
    }
    
    .logo-icon {
      font-size: 4rem;
      position: relative;
      z-index: 1;
    }
    
    .content {
      background: rgba(255, 255, 255, 0.95);
      border-radius: 20px;
      padding: 2.5rem 2rem;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      backdrop-filter: blur(10px);
      width: 100%;
    }
    
    .title {
      font-size: 2.5rem;
      font-weight: 900;
      color: #0a1e4a;
      margin-bottom: 0.75rem;
      letter-spacing: 2px;
      text-transform: uppercase;
    }
    
    .subtitle {
      font-size: 1.15rem;
      color: #666;
      margin-bottom: 2rem;
      font-weight: 500;
    }
    
    .loader-container {
      margin: 1.5rem 0;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 0.75rem;
    }
    
    .loader-dot {
      width: 14px;
      height: 14px;
      background: #2e7d32;
      border-radius: 50%;
      animation: bounce 1.4s infinite ease-in-out both;
    }
    
    .loader-dot:nth-child(1) { animation-delay: -0.32s; }
    .loader-dot:nth-child(2) { animation-delay: -0.16s; }
    
    @keyframes bounce {
      0%, 80%, 100% {
        transform: scale(0);
        opacity: 0.5;
      }
      40% {
        transform: scale(1);
        opacity: 1;
      }
    }
    
    .status-box {
      background: linear-gradient(135deg, rgba(46, 125, 50, 0.1) 0%, rgba(76, 175, 80, 0.05) 100%);
      border: 2px solid rgba(46, 125, 50, 0.3);
      border-radius: 15px;
      padding: 1.25rem;
      margin-top: 1.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1rem;
    }
    
    .status-icon {
      font-size: 1.75rem;
      color: #2e7d32;
      animation: spin 2s linear infinite;
    }
    
    @keyframes spin {
      from { transform: rotate(0deg); }
      to { transform: rotate(360deg); }
    }
    
    .status-text {
      font-size: 1rem;
      font-weight: 700;
      color: #2e7d32;
      text-transform: uppercase;
      letter-spacing: 1px;
    }
    
    .refresh-button {
      margin-top: 1.75rem;
      padding: 0.9rem 2.25rem;
      background: linear-gradient(135deg, #0a1e4a 0%, #1a3a6e 100%);
      color: white;
      border: none;
      border-radius: 50px;
      font-size: 1rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 1px;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 5px 20px rgba(10, 30, 74, 0.3);
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
    }
    
    .refresh-button:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 30px rgba(10, 30, 74, 0.4);
    }
    
    .refresh-button:active {
      transform: translateY(-1px);
    }
    
    .refresh-icon {
      font-size: 1.35rem;
    }
    
    .info-message {
      background: rgba(245, 124, 0, 0.1);
      border: 2px solid rgba(245, 124, 0, 0.3);
      border-radius: 12px;
      padding: 1.15rem;
      margin-top: 1.5rem;
      display: flex;
      align-items: flex-start;
      gap: 1rem;
      text-align: left;
    }
    
    .info-icon {
      font-size: 1.35rem;
      color: #f57c00;
      flex-shrink: 0;
      margin-top: 2px;
    }
    
    .info-text {
      font-size: 0.9rem;
      color: #666;
      line-height: 1.5;
    }
    
    /* Tablets em paisagem */
    @media (min-width: 768px) and (max-height: 900px) {
      .logo-circle {
        width: 120px;
        height: 120px;
      }
      
      .logo-icon {
        font-size: 3.5rem;
      }
      
      .title {
        font-size: 2rem;
      }
      
      .subtitle {
        font-size: 1rem;
        margin-bottom: 1.5rem;
      }
      
      .content {
        padding: 2rem 1.75rem;
      }
      
      .loader-container {
        margin: 1.25rem 0;
      }
      
      .status-box {
        padding: 1rem;
        margin-top: 1.25rem;
      }
      
      .info-message {
        padding: 1rem;
        margin-top: 1.25rem;
      }
      
      .refresh-button {
        margin-top: 1.5rem;
        padding: 0.8rem 2rem;
      }
    }
    
    /* Tablets em retrato e dispositivos pequenos */
    @media (max-width: 767px) {
      .waiting-container {
        padding: 1.5rem;
      }
      
      .logo-circle {
        width: 120px;
        height: 120px;
      }
      
      .logo-icon {
        font-size: 3.5rem;
      }
      
      .title {
        font-size: 2rem;
      }
      
      .subtitle {
        font-size: 1rem;
        margin-bottom: 1.5rem;
      }
      
      .content {
        padding: 2rem 1.5rem;
      }
      
      .status-text {
        font-size: 0.9rem;
      }
      
      .info-text {
        font-size: 0.85rem;
      }
      
      .refresh-button {
        padding: 0.85rem 2rem;
        font-size: 0.95rem;
      }
    }
    
    /* Dispositivos muito pequenos */
    @media (max-width: 480px) {
      .logo-container {
        margin-bottom: 1.5rem;
      }
      
      .logo-circle {
        width: 100px;
        height: 100px;
      }
      
      .logo-icon {
        font-size: 3rem;
      }
      
      .title {
        font-size: 1.75rem;
      }
      
      .subtitle {
        font-size: 0.95rem;
      }
      
      .content {
        padding: 1.75rem 1.25rem;
      }
    }
  </style>
</head>
<body>
  <div class="waiting-page">
    <div class="particles" id="particles"></div>
    
    <div class="waiting-container">
      <div class="logo-container">
        <div class="logo-circle">
          <div class="logo-icon">üó≥Ô∏è</div>
        </div>
      </div>
      
      <div class="content">
        <h1 class="title">Aguarde</h1>
        <p class="subtitle">A sess√£o de vota√ß√£o ainda n√£o foi iniciada</p>
        
        <div class="loader-container">
          <div class="loader-dot"></div>
          <div class="loader-dot"></div>
          <div class="loader-dot"></div>
        </div>
        
        <div class="status-box">
          <i class="bi bi-hourglass-split status-icon"></i>
          <span class="status-text">Aguardando Abertura</span>
        </div>
        
        <div class="info-message">
          <i class="bi bi-info-circle-fill info-icon"></i>
          <div class="info-text">
            <strong>O que fazer?</strong><br>
            A vota√ß√£o ser√° liberada assim que o administrador abrir a sess√£o. 
            Aguarde a confirma√ß√£o ou atualize a p√°gina periodicamente.
          </div>
        </div>
        
        <button class="refresh-button" onclick="location.reload()">
          <i class="bi bi-arrow-clockwise refresh-icon"></i>
          Atualizar P√°gina
        </button>
      </div>
    </div>
  </div>
  
  <script>
    // Gera part√≠culas animadas no fundo
    const particlesContainer = document.getElementById('particles');
    for (let i = 0; i < 50; i++) {
      const particle = document.createElement('div');
      particle.className = 'particle';
      particle.style.left = Math.random() * 100 + '%';
      particle.style.animationDelay = Math.random() * 20 + 's';
      particle.style.animationDuration = (Math.random() * 10 + 15) + 's';
      particlesContainer.appendChild(particle);
    }
  </script>
</body>
</html>
    
  <% else %>
    <!-- URNA NORMAL -->
    <div class="urna-page-wrapper">
      <!-- Header da Urna -->
      <div class="urna-header">
        <div class="urna-logo">
          <i class="bi bi-shield-fill-check"></i>
        </div>
        <div class="urna-header-content">
          <h1 class="urna-title">URNA ELETR√îNICA</h1>
          <h2 class="urna-turma">Turma: <%= @turma.nome %></h2>
        </div>
      </div>

      <!-- Instru√ß√µes -->
      <div class="urna-instrucoes">
        <div class="instrucao-item">
          <i class="bi bi-1-circle-fill"></i>
          <span>Escolha seu candidato</span>
        </div>
        <div class="instrucao-item">
          <i class="bi bi-2-circle-fill"></i>
          <span>Confira os dados</span>
        </div>
        <div class="instrucao-item">
          <i class="bi bi-3-circle-fill"></i>
          <span>Confirme seu voto</span>
        </div>
      </div>

      <!-- Container Principal da Urna -->
      <div class="urna-main-container">
        <!-- Visor (Tela de Visualiza√ß√£o) -->
        <div class="urna-visor">
          <div class="visor-header">
            <span class="visor-titulo">SEU VOTO</span>
            <div class="visor-status" id="visor-status">
              <i class="bi bi-circle-fill"></i>
              <span>Selecione um candidato</span>
            </div>
          </div>

          <div id="visualizacao" class="visor-content">
            <div class="candidato-preview" id="candidato-preview">
              <div class="preview-fotos">
                <div id="foto-lider-container" class="foto-container">
                  <div class="foto-placeholder">
                    <i class="bi bi-person-fill"></i>
                  </div>
                  <span class="foto-label">L√≠der</span>
                </div>
                <div id="foto-vice-container" class="foto-container" style="display: none;">
                  <div class="foto-placeholder">
                    <i class="bi bi-person-fill"></i>
                  </div>
                  <span class="foto-label">Vice</span>
                </div>
              </div>
              <div class="preview-info">
                <h3 id="nome-urna" class="preview-nome"></h3>
                <p id="nome-vice" class="preview-vice"></p>
              </div>
            </div>

            <div id="mensagem-branco" class="mensagem-branco">
              <i class="bi bi-file-earmark-x"></i>
              <h3>VOTO EM BRANCO</h3>
              <p>Voc√™ est√° votando em branco</p>
            </div>

            <div id="mensagem-inicial" class="mensagem-inicial">
              <i class="bi bi-hand-index-thumb"></i>
              <h3>Escolha seu candidato</h3>
              <p>Clique em um candidato ao lado para iniciar</p>
            </div>
          </div>
        </div>

        <!-- Teclado (Lista de Candidatos + Bot√µes) -->
        <div class="urna-teclado">
          <%= form_with url: registrar_voto_candidaturas_path, method: :post, id: "form-voto" do %>
            <%= hidden_field_tag :candidatura_id, "", id: "candidatura_id" %>
            <%= hidden_field_tag :turma_id, @turma.id %>

            <div class="teclado-header mb-2">
              <i class="bi bi-list-ul"></i>
              <span>CANDIDATOS</span>
            </div>

            <div class="candidatos-lista">
              <% @candidaturas.each_with_index do |candidato, index| %>
                <button type="button" 
                        class="btn-candidato" 
                        data-numero="<%= index + 1 %>"
                        onclick="selecionarCandidato(
                          '<%= candidato.id %>', 
                          '<%= candidato.nome_urna %>', 
                          '<%= candidato.nome_candidato %>',
                          '<%= candidato.vice_lider %>',
                          '<%= candidato.nome_urna_vice %>', 
                          '<%= url_for(candidato.foto_lider) if candidato.foto_lider.attached? %>',
                          '<%= url_for(candidato.foto_vice) if candidato.foto_vice.attached? %>')">
                  <span class="candidato-numero"><%= index + 1 %></span>
                  <div class="candidato-dados">
                    <span class="candidato-nome"><%= candidato.nome_urna %></span>
                    <% if candidato.nome_urna_vice.present? %>
                      <span class="candidato-vice">Vice: <%= candidato.nome_urna_vice %></span>
                    <% end %>
                  </div>
                  <i class="bi bi-chevron-right"></i>
                </button>
              <% end %>
            </div>

            <div class="botoes-controle">
              <button type="button" class="btn-urna btn-branco" onclick="votarBranco()">
                <i class="bi bi-file-earmark-x"></i>
                <span>BRANCO</span>
              </button>
              <button type="button" class="btn-urna btn-corrigir" onclick="corrigirVoto()">
                <i class="bi bi-arrow-counterclockwise"></i>
                <span>CORRIGIR</span>
              </button>
              <div id="confirmar-container">
                <button type="submit" class="btn-urna btn-confirmar" onclick="tocarSom(event)">
                  <i class="bi bi-check-circle-fill"></i>
                  <span>CONFIRMAR</span>
                </button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    <script type="module">
      import "channels/voting_session_channel"
    </script>
    <script>
      let audio;
      document.addEventListener('DOMContentLoaded', function() {
        audio = new Audio('/teste_.wav');
        audio.preload = 'auto';
        audio.load();
      });

      function verificarAudio() {
        if (audio.paused || audio.readyState < 3) {
          audio.load();
        }
      }

      function selecionarCandidato(id, nomeUrna, nomeCandidato, viceNome, nomeUrnaVice, fotoLiderUrl, fotoViceUrl) {
        verificarAudio();
        
        document.getElementById('candidatura_id').value = id;
        document.getElementById('nome-urna').textContent = nomeUrna;
        
        const nomeViceElement = document.getElementById('nome-vice');
        const fotoViceContainer = document.getElementById('foto-vice-container');
        
        if (viceNome && viceNome.trim() !== '') {
          nomeViceElement.textContent = nomeCandidato + ' & ' + viceNome;
          nomeViceElement.style.display = 'block';
          fotoViceContainer.style.display = 'flex';
          
          if (fotoViceUrl && fotoViceUrl.trim() !== '') {
            fotoViceContainer.innerHTML = `<img src="${fotoViceUrl}" class="foto-candidato"><span class="foto-label">Vice</span>`;
          } else {
            fotoViceContainer.innerHTML = '<div class="foto-placeholder"><i class="bi bi-person-fill"></i></div><span class="foto-label">Vice</span>';
          }
        } else {
          nomeViceElement.textContent = nomeCandidato;
          nomeViceElement.style.display = 'block';
          fotoViceContainer.style.display = 'none';
        }
        
        const fotoLiderContainer = document.getElementById('foto-lider-container');
        if (fotoLiderUrl && fotoLiderUrl.trim() !== '') {
          fotoLiderContainer.innerHTML = `<img src="${fotoLiderUrl}" class="foto-candidato"><span class="foto-label">L√≠der</span>`;
        } else {
          fotoLiderContainer.innerHTML = '<div class="foto-placeholder"><i class="bi bi-person-fill"></i></div><span class="foto-label">L√≠der</span>';
        }
        
        document.getElementById('candidato-preview').style.display = 'flex';
        document.getElementById('mensagem-branco').style.display = 'none';
        document.getElementById('mensagem-inicial').style.display = 'none';
        document.getElementById('confirmar-container').style.display = 'block';
        
        const status = document.getElementById('visor-status');
        status.innerHTML = '<i class="bi bi-check-circle-fill"></i><span>Candidato selecionado</span>';
        status.classList.add('status-pronto');
      }

      function votarBranco() {
        verificarAudio();
        
        document.getElementById('candidatura_id').value = '';
        document.getElementById('candidato-preview').style.display = 'none';
        document.getElementById('mensagem-inicial').style.display = 'none';
        document.getElementById('mensagem-branco').style.display = 'flex';
        document.getElementById('confirmar-container').style.display = 'block';
        
        const status = document.getElementById('visor-status');
        status.innerHTML = '<i class="bi bi-file-earmark-x"></i><span>Voto em branco</span>';
        status.classList.add('status-branco');
      }

      function corrigirVoto() {
        verificarAudio();
        
        document.getElementById('candidatura_id').value = '';
        document.getElementById('nome-urna').textContent = '';
        document.getElementById('nome-vice').textContent = '';
        
        const fotoLiderContainer = document.getElementById('foto-lider-container');
        const fotoViceContainer = document.getElementById('foto-vice-container');
        fotoLiderContainer.innerHTML = '<div class="foto-placeholder"><i class="bi bi-person-fill"></i></div><span class="foto-label">L√≠der</span>';
        fotoViceContainer.innerHTML = '<div class="foto-placeholder"><i class="bi bi-person-fill"></i></div><span class="foto-label">Vice</span>';
        fotoViceContainer.style.display = 'none';
        
        document.getElementById('candidato-preview').style.display = 'none';
        document.getElementById('mensagem-branco').style.display = 'none';
        document.getElementById('mensagem-inicial').style.display = 'flex';
        document.getElementById('confirmar-container').style.display = 'none';
        
        const status = document.getElementById('visor-status');
        status.innerHTML = '<i class="bi bi-circle-fill"></i><span>Selecione um candidato</span>';
        status.classList.remove('status-pronto', 'status-branco');
      }

      function tocarSom(e) {
        e.preventDefault();
        verificarAudio();

        Swal.fire({
          title: 'Processando...',
          html: 'Por favor, aguarde.',
          allowOutsideClick: false,
          showConfirmButton: false,
          didOpen: () => { Swal.showLoading(); }
        });

        audio.currentTime = 0;
        audio.play().then(() => {
          audio.onended = () => {
            Swal.close();

            Swal.fire({
              title: 'FIM',
              html: '<h3>Voto computado com sucesso! ‚úÖ</h3>',
              icon: 'success',
              confirmButtonText: 'OK',
              allowOutsideClick: false
            }).then(() => {
              document.getElementById('form-voto').submit();
            });
          };
        }).catch(() => {
          Swal.close();
          document.getElementById('form-voto').submit();
        });
      }
    </script>
  <% end %>
</body>
</html>