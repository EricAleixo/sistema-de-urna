<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "home", media: "all", "data-turbo-track": "reload" %>
<% end %>

<div class="home-container">
  <div class="hero-section text-center">
    <h1 class="project-title">Sistema de Urna Escolar</h1>
    <p class="project-subtitle">
      Gerencie votações, candidaturas e sessões com segurança e simplicidade.
    </p>

    <% if user_signed_in? %>
      <div class="mt-4">
        <% if current_user.admin? %>
          <a href="#" class="btn btn-primary btn-lg">Painel Administrativo</a>
        <% elsif current_user.mesario? %>
          <a href="#" class="btn btn-success btn-lg">Painel do Mesário</a>
        <% else %>
          <a href="#" class="btn btn-outline-primary btn-lg">Ir para Votação</a>
        <% end %>
      </div>
    <% else %>
      <div class="mt-4">
        <a href="<%= new_user_session_path %>" class="btn btn-primary btn-lg me-2">Entrar</a>
        <a href="<%= new_user_registration_path %>" class="btn btn-outline-primary btn-lg">Criar Conta</a>
      </div>
    <% end %>
  </div>

  <div class="features-section">
    <div class="row g-4">
      <div class="col-md-4">
        <div class="feature-card">
          <i class="bi bi-people-fill feature-icon"></i>
          <h3>Votação Simples</h3>
          <p>Processo rápido e seguro para eleitores de cada turma.</p>
        </div>
      </div>

      <div class="col-md-4">
        <div class="feature-card">
          <i class="bi bi-person-badge-fill feature-icon"></i>
          <h3>Painel do Mesário</h3>
          <p>Controle total da sessão e seleção da turma em tempo real.</p>
        </div>
      </div>

      <div class="col-md-4">
        <div class="feature-card">
          <i class="bi bi-bar-chart-line-fill feature-icon"></i>
          <h3>Resultados Organizados</h3>
          <p>Acompanhe os votos de forma transparente e auditável.</p>
        </div>
      </div>
    </div>
  </div>
</div>
